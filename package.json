{
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=13.0.0",
    "yarn": ">= 1.19.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "./cli.js build",
    "lint": "yarn lint:js;yarn lint:scss",
    "lint:js": "eslint \"packages/**/*.js\"",
    "lint:scss": "stylelint 'packages/webphone/**/*.scss'",
    "prepare": "snowpack --include \"packages/webphone/**/*.js\" --dest build/static/web_modules",
    "release": "standard-version",
    "icons": "vsvg -s packages/theme/src/svg/ --es6 -t packages/theme/src/js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.js": "eslint",
    "**/*.scss": "stylelint"
  },
  "devDependencies": {
    "@commitlint/cli": "7.x.x",
    "@commitlint/config-conventional": "7.x.x",
    "@garage11/vuepack": "^2.0.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.1",
    "clean-css": "^4.2.3",
    "connect": "^3.7.0",
    "connect-mount": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "del": "2.x.x",
    "eslint": "6.x.x",
    "eslint-plugin-sort-class-members": "1.x.x",
    "eslint-plugin-vue": "^6.2.1",
    "fs-extra": "^8.1.0",
    "globby": "^11.0.0",
    "husky": "3.x.x",
    "imagemin": "^7.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-pngquant": "^8.0.0",
    "lerna": "^3.19.0",
    "lint-staged": "9.x.x",
    "lodash": "^4.17.15",
    "node-sass": "^4.13.1",
    "node-sass-glob-importer": "^5.3.2",
    "puppeteer": "2.x.x",
    "rc": "^1.2.8",
    "rollup": "^1.31.1",
    "rollup-plugin-terser": "^5.2.0",
    "serve-static": "^1.14.1",
    "snowpack": "^1.4.0",
    "standard-version": "7.x.x",
    "stylelint": "13.x.x",
    "stylelint-order": "4.x.x",
    "stylelint-scss": "3.x.x",
    "tap-spec": "5.x.x",
    "tape": "4.x.x",
    "tape-catch": "1.x.x",
    "tiny-lr": "^1.1.1",
    "yargs": "15.x.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "roboto-fontface": "^0.10.0",
    "vue-svgicon": "^3.2.6"
  }
}
